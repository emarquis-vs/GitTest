<Window x:Class="TestGit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button
            Content="Button"
            HorizontalAlignment="Left"
            Height="49"
            Margin="178,123,0,0"
            VerticalAlignment="Top"
            Width="172"
            Click="Button_Click" />
        <Rectangle
            HorizontalAlignment="Left"
            Height="63"
            Margin="65,24,0,0"
            Stroke="Black"
            VerticalAlignment="Top"
            Width="382">
            <Rectangle.Fill>
                <LinearGradientBrush
                    EndPoint="0.5,1"
                    StartPoint="0.5,0">
                    <GradientStop
                        Color="Black"
                        Offset="0" />
                    <GradientStop
                        Color="White"
                        Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

    </Grid>
</Window>
